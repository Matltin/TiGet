      <Label fx:id="movieTitle" layoutX="2.0" layoutY="177.0" text="The Batman" />
      <Button layoutX="1.0" layoutY="2.0" mnemonicParsing="false" onAction="#loadMoviePage" prefHeight="194.0" prefWidth="124.0" style="-fx-background-color: transparent;" />
