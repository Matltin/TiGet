<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" styleClass="wallpaper" stylesheets="@LoginStyle.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.SignupController">
    <children>
        <Label layoutX="101.0" layoutY="165.0" text="Username" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="username" layoutX="100.0" layoutY="185.0" prefHeight="30.0" prefWidth="200.0" promptText="username" styleClass="fields" />

        <Label layoutX="101.0" layoutY="235.0" text="Password" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
        <PasswordField fx:id="password" layoutX="100.0" layoutY="255.0" prefHeight="30.0" prefWidth="200.0" promptText="password" styleClass="fields" />

        <Label layoutX="101.0" layoutY="305.0" text="Email Address" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="emailAddress" layoutX="100.0" layoutY="325.0" prefHeight="30.0" prefWidth="200.0" promptText="email" styleClass="fields" />

        <Button layoutX="156.0" layoutY="395.0" onAction="#sinUp" prefHeight="40.0" prefWidth="100.0" styleClass="buttons" text="Sign Up" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
    </children>
</AnchorPane>
